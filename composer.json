{
    "name": "mapexss/filament-two-factor-authentication",
    "description": "Filament Two Factor Authentication: Google 2FA + Passkey Authentication",
    "keywords": [
        "mapexss",
        "laravel",
        "filament",
        "2fa",
        "passkey authentication",
        "two-factor authentication"
    ],
    "homepage": "https://github.com/mapexss/filament-two-factor-authentication",
    "support": {
        "issues": "https://github.com/mapexss/filament-two-factor-authentication/issues",
        "source": "https://github.com/mapexss/filament-two-factor-authentication"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "mapexss",
            "email": "mapexss@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "filament/filament": "^4.0",
        "pragmarx/google2fa": "^8.0",
        "bacon/bacon-qr-code": "^3.0",
        "spatie/laravel-passkeys": "^1.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9|^8.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.1|^3.0",
        "pestphp/pest-plugin-arch": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "pestphp/pest-plugin-livewire": "^2.1|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Mapexss\\FilamentTwoFactorAuthentication\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mapexss\\FilamentTwoFactorAuthentication\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mapexss\\FilamentTwoFactorAuthentication\\TwoFactorAuthenticationServiceProvider"
            ],
            "aliases": {
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
